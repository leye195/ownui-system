{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@ui-system/*": ["src/*"],
      "@ui-system/components/*": ["src/components/*"],
      "@ui-system/components": ["src/components"],
      "@ui-system/shared/*": ["src/components/shared/*"],
      "@ui-system/styles/*": ["src/styles/*"],
      "@ui-system/styles": ["src/styles"],
      "@ui-system/types/*": ["src/types/*"],
      "@ui-system/types": ["src/types"],
      "@ui-system/utils/*": ["src/utils"],
      "@ui-system/utils": ["src/utils"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
